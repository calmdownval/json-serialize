{
	"extends" : "eslint:recommended",
	"env" :
	{
		"browser" : true
	},
	"parserOptions" :
	{
		"ecmaVersion" : 2018,
		"sourceType" : "module"
	},
	"rules" :
	{
		"no-trailing-spaces" : "warn",
		"no-console" : "warn",
		"eqeqeq" : "warn",
		"indent" :
		[
			"warn",
			"tab",
			{
				"SwitchCase" : 1,
				"ObjectExpression" : 1
			}
		],
		"linebreak-style" :
		[
			"warn",
			"unix"
		],
		"quotes" :
		[
			"warn",
			"single"
		],
		"semi" :
		[
			"error",
			"always"
		]
	}
}
